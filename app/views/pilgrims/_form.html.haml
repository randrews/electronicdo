= form_for @pilgrim do |f|
  -if @pilgrim.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pilgrim.errors.count, "error")} prohibited this pilgrim from being saved:"
      %ul
        - @pilgrim.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :game_id
    = f.text_field :game_id
  .actions
    = f.submit 'Save'
